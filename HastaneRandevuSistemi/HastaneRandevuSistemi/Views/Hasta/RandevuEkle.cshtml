@model RandevuViewModel

@{
    ViewBag.Title = "Randevu Ekle";
    Layout = "_HastaLayout";
}

<div class="content">
    <div class="breadcrumb header text-center" style="display: block">
    <h2>Randevu Ekle</h2>
        
            </div>
    <div class="container mt-4">
        <div class="breadcrumb bg-light p-4 rounded shadow-sm">
            <form id="randevuForm" class="needs-validation" novalidate>
                <!-- Hasta ID (Gizli Alan) -->
                <input type="hidden" id="hastaId" value="@User.Identity.Name" />
    
                <!-- Alan Seçimi -->
                <div class="mb-3 row">
                    <label for="alanDropdown" class="col-md-3 col-form-label fw-bold">Alan Seç:</label>
                    <div class="col-md-9">
                        <select id="alanDropdown" class="form-select" required>
                            <option value="">Alan Seçiniz</option>
                            <!-- Alanlar AJAX ile yüklenecek -->
                        </select>
                        <div class="invalid-feedback">Lütfen bir alan seçiniz.</div>
                    </div>
                </div>
    
                <!-- Doktor Seçimi -->
                <div class="mb-3 row">
                    <label for="doktorDropdown" class="col-md-3 col-form-label fw-bold">Doktor Seç:</label>
                    <div class="col-md-9">
                        <select id="doktorDropdown" class="form-select" disabled required>
                            <option value="">Önce bir alan seçiniz</option>
                            <!-- Doktorlar AJAX ile yüklenecek -->
                        </select>
                        <div class="invalid-feedback">Lütfen bir doktor seçiniz.</div>
                    </div>
                </div>
    
                <!-- Tarih ve Saat Seçimi -->
                <div class="mb-3 row">
                    <label for="randevuTarihi" class="col-md-3 col-form-label fw-bold">Randevu Tarihi:</label>
                    <div class="col-md-9">
                        <input type="datetime-local" id="randevuTarihi" class="form-control" required />
                        <div class="invalid-feedback">Lütfen bir tarih ve saat seçiniz.</div>
                    </div>
                </div>
    
                <!-- Kaydet Butonu -->
                <div class="text-end">
                    <button type="submit" class="btn btn-primary px-4">Randevu Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Başarı ve Hata Mesajları -->
<div id="message" class="mt-3"></div>