@model ChangePasswordViewModel

@{
    ViewBag.Title = "Şifre Değiştir";
    Layout = "_HastaLayout";
}

<div class="container mt-4">
    <h2>Şifre Değiştir</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        <script>
                    // 2 saniye (2000 milisaniye) sonra yönlendirme
                    setTimeout(function () {
                        window.location.href = '@Url.Action("Login", "Hasta")';
                    }, 2000);
                </script>
    }

    <form asp-action="ChangePassword" method="post">
        <input type="hidden" asp-for="UserId" />

        <div class="form-group">
            <label>Mevcut Şifre</label>
            <input type="password" asp-for="CurrentPassword" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Yeni Şifre</label>
            <input type="password" asp-for="NewPassword" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Yeni Şifre (Tekrar)</label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary mt-2">Şifreyi Değiştir</button>
    </form>
</div>